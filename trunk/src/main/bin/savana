if [ "$SAVANA_HOME" = "" ]
then
  SAVANA_HOME="`dirname $0`/.."
fi

BIN_DIR="$SAVANA_HOME/bin"
LIB_DIR="$SAVANA_HOME/lib"

CLASSPATH="$SAVANA_HOME"
for I in $LIB_DIR/*.jar
do
  CLASSPATH="$CLASSPATH:$I"
done

usage() {

cat <<USAGE
Usage: savana <subcommand> [args]

Available subcommands:
     createreleasebranch (crb)
     createuserbranch (cub, cb)
     deleteuserbranch (dub, db)
     listchanges (lc, diff)
     listuserbranches (lb, lub)
     listworkingcopyinfo (lwci, workingcopyinfo, wci, info)
     promote
     reverttosource (rs, revert)
     setbranch (sb)
     sync (resync)
     createmetadatafile (bootstrap)
USAGE

exit 1

}


if [ $# -lt 1 -o "x$1" == "x-h" -o "x$1" == "x--help" ]
then
  usage
fi

COMMAND="$1" ; shift


case "$COMMAND" in

"createreleasebranch"|"crb") SCRIPT_CLASS=org.codehaus.savana.scripts.CreateBranch ;;
"createuserbranch"|"cub"|"cb") SCRIPT_CLASS=org.codehaus.savana.scripts.CreateUserBranch ;;
"deleteuserbranch"|"dub"|"db") SCRIPT_CLASS=org.codehaus.savana.scripts.DeleteUserBranch ;;
"diffchangesfromsource"|"diff") SCRIPT_CLASS=org.codehaus.savana.scripts.DiffChangesFromSource ;;
"listchangesfromsource"|"listchanges"|"lc") SCRIPT_CLASS=org.codehaus.savana.scripts.ListChangesFromSource ;;
"listuserbranches"|"listbranches"|"lub"|"lb") SCRIPT_CLASS=org.codehaus.savana.scripts.ListUserBranches ;;
"listworkingcopyinfo"|"lwci"|"workingcopyinfo"|"wci"|"info") SCRIPT_CLASS=org.codehaus.savana.scripts.ListWorkingCopyInfo ;;
"promote") SCRIPT_CLASS=org.codehaus.savana.scripts.Promote ;;
"sync"|"resync"|"synchronize") SCRIPT_CLASS=org.codehaus.savana.scripts.Synchronize ;;
"reverttosource"|"rs"|"revert") SCRIPT_CLASS=org.codehaus.savana.scripts.RevertToSource ;;
"setbranch"|"sb") SCRIPT_CLASS=org.codehaus.savana.scripts.SetBranch ;;
"createmetadatafile"|"bootstrap") SCRIPT_CLASS=org.codehaus.savana.scripts.admin.CreateMetadataFile ;;

*)
  echo "Unknown command: $1" >&2
  usage
;;

esac

java -classpath "$CLASSPATH" -Dsavana.home=$SAVANA_HOME org.codehaus.savana.scripts.SVNScript "$SCRIPT_CLASS" "$@"

exit

#__END__
